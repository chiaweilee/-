{
  "name": "app",
  "private": true,
  "scripts": {
    "start": "umi dev",
    "build": "umi build",
    "prebuild": "npm run build:webp",
    "build:webp": "node ./scripts/webp",
    "test": "umi test",
    "lint": "npm run lint:es && npm run lint:sty",
    "lint-fix": "npm run lint:es-fix && npm run lint:sty-fix",
    "lint:es": "eslint --ext .js --ext .jsx --ext .ts --ext .tsx . --quiet",
    "lint:sty": "stylelint \"**/*.less\" --quiet",
    "lint:es-fix": "eslint --ext .js --ext .jsx --ext .ts --ext .tsx . --fix",
    "lint:sty-fix": "stylelint \"**/*.less\" --fix"
  },
  "dependencies": {
    "antd": "^3.26.20",
    "cryptorjs": "^3.0.0",
    "github-markdown-css": "^3.0.1",
    "highlight.js": "^9.18.5",
    "use-pan-zoom": "^3.2.0"
  },
  "devDependencies": {
    "@antv/g2": "^4.1.16",
    "@types/lodash": "^4.14.167",
    "@types/react": "^16.14.2",
    "@types/react-dom": "^16.9.10",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.15.0",
    "eslint-config-ali": "^12.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-react-jsx-filter": "^6.0.0",
    "eslint-plugin-flowtype": "^5.9.2",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "husky": "^7.0.2",
    "lint-staged": ">=10",
    "prettier": "^2.2.1",
    "stylelint": "^13.8.0",
    "stylelint-config-ali": "^0.4.1",
    "stylelint-config-css-modules": "2.2.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-scss": "^3.18.0",
    "umi": "^2.13.16",
    "umi-plugin-md": "^0.3.1",
    "umi-plugin-react": "^1.15.8",
    "webp-loader": "^0.6.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:es",
      "git add",
      "eslint --cache --fix"
    ],
    "*.ts": [
      "npm run lint:ts",
      "git add"
    ],
    "*.less": [
      "npm run lint:sty",
      "git add"
    ],
    "*.{js,jsx,json,ts,tsx,css,md}": [
      "prettier --write",
      "git add"
    ],
    "*.css": "stylelint --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
